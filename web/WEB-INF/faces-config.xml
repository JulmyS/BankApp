<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>ch.hearc.ig.odi.properties.msg</base-name>
            <var>msg</var>
        </resource-bundle>

        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>fr</supported-locale>
        </locale-config>
        
        <managed-bean>

            <managed-bean-name>customersBean</managed-bean-name>
            <managed-bean-class>ch.hearc.ig.odi.bean.CustomersBean</managed-bean-class>
            <managed-bean-scope>customers</managed-bean-scope>

        </managed-bean>
    </application>
</faces-config>
